    ViewData["Title"] = "Create";
}

@{
    Layout = "_ManagerLayout";
}

<h1>Create</h1>

<h4>Maintenance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
