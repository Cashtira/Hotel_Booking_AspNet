@model IEnumerable<MVCmodel.Models.Housekeeping>

@{
    ViewData["Title"] = "Index";
}

<h1>Housekeeping</h1>

<p>
    <a class="create-button" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateCleaned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCleaned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.RoomID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Staff.StaffID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HousekeepingID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HousekeepingID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HousekeepingID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
